<div class="wrapper bg-warning">
    <div>
        <h1 class="p-3 text-center text-dark">你想對誰說幹話?</h1>
    </div>
    <div class="form-wrapper">
    <form action="/" method="POST">
        <div class="d-flex justify-content-around card-deck">
            <div class="col-lg-3 border-0">
                <div class="img h-75 overflow-hidden mb-3">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
                    class="card-img-top" alt="...">
                </div>
                <div class="bg-warning  text-center">
                    <input type="radio" id="engineer" name="job" value="engineer" {{#ifeq job 'engineer'}}checked{{/ifeq}}>
                    <label for="engineer"><h5>工程師</h5></label>
                </div>
            </div>
            <div class="col-lg-3 border-0">
                <div class="img h-75 overflow-hidden mb-3">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
                    class="card-img-top" alt="...">
                </div>
                <div class="bg-warning text-center">
                    <input type="radio" id="designer" name="job" value="designer" {{#ifeq job 'designer'}}checked{{/ifeq}}>
                    <label for="designer"><h5>設計師</h5></label>
                </div>
            </div>
            <div class="col-lg-3 border-0">
                <div class="img h-75 overflow-hidden mb-3">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
                    class="card-img-top" alt="...">
                </div>
                <div class="bg-warning text-center">
                    <input type="radio" id="entrepreneur" name="job" value="entrepreneur" {{#ifeq job 'entrepreneur'}}checked{{/ifeq}}>
                    <label for="entrepreneur"><h5>創業家</h5></label>
                </div>
            </div>
        </div>
    
        <div class="d-flex justify-content-around">
            <div>
                <button type="submit" class="btn btn-primary">產生幹話</button>
            </div>
            <div>
                <textarea id="text" name="text" rows="4" cols="150">
                    {{#if trashTalk}}{{trashTalk}}{{/if}}
                </textarea>
            </div>
        </div>

    </form>
    </div>
    
</div>